<Window x:Class="WinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Bar" Height="60" Width="600" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="searchTextBox" Margin="11" FontSize="26" Foreground="White" 
                 Background="Black" BorderBrush="Black" TextChanged="SearchTextBox_TextChanged"/>
    </Grid>
</Window>
